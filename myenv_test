#!/bin/bash

command=$1
name=$2

envsPath="/home/mount/py_Envs"


if [ $command == activate ]
then
    source $envsPath/$name/bin/activate
elif [ $command == create ]
then
    [ ! -d "$envsPath/$name" ] && virtualenv $envsPath/$name
elif [ $command == remove ]
then
    [ -d "$envsPath/$name" ] && rm -r $envsPath/$name
elif [ $command == install ]
then
    if [ -n "$VIRTUAL_ENV" ]
    then
        pip install $name --no-cache-dir
    fi
fi
